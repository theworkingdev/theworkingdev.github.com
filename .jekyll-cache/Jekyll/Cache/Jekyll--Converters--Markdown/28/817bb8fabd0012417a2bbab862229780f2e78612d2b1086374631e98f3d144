  <span class="o">}</span>
<span class="o">}</span>

<span class="kd">class</span> <span class="nc">RView</span> <span class="kd">extends</span> <span class="nc">LinearLayout</span> <span class="kd">implements</span> <span class="nc">OnClickListener</span> <span class="o">{</span>

